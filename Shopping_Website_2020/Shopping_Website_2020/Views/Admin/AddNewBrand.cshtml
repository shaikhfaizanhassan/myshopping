@model Shopping_Website_2020.Models.tb_brand

@{
    ViewBag.Title = "AddNewBrand";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}




@using (Html.BeginForm("SetAddNewBrand","Admin",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Add New Brand</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Brand Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.brand_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.brand_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <p style="color:red">@TempData["Message"]</p>
        </div>
    </div>
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
