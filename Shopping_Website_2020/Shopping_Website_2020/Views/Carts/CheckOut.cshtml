
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_CheckOutLayout.cshtml";
}
@if (Session["cart"] != null)
{
    <div class="colorlib-shop">
        <div class="container">
            <h2 style="text-align:center">Your Shopping Cart</h2>
            <div class="row row-pb-md">
                <div class="col-lg-12">
                    <div class="product-name">
                        <div class="one-forth text-center">
                            <span>Product Details</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Price</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Quantity</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Total</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Image</span>
                        </div>
                    </div>
                    @foreach (var item in Session["cart"] as List<Shopping_Website_2020.Models.CartDetails>)
                    {
                        <div class="product-cart">
                            <div class="one-forth">
                                <div class="product-img" style="background-image: url(images/item-6.jpg);">
                                </div>
                                <div class="display-tc">
                                    <h3>@item.PRODUCTNAME</h3>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span class="price">@item.PRODUCTPRICE</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <input type="text" id="quantity" name="quantity" class="form-control input-number text-center" value="@item.PROQTY" min="1" max="100">
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span class="price">@item.BILL</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span class="image"><img src="~/Product_images/@item.PRODUCTIMAGE" width="50" height="50"></span>
                                </div>
                            </div>

                       
                        </div>
                    }
                    
            
                </div>
            </div>
            @using (Html.BeginForm())
            {
                <input type="submit" value="Process To CheckOut" class="btn btn-danger">
            }
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="total-wrap">
                        <div class="row">
                            <div class="col-md-8">
                                <form action="#">
                                    <div class="row form-group">
                                        <div class="col-md-6">
                                            
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-3 col-md-push-1 text-center">
                                <div class="total">
                                    <div class="sub">
                                        <p><span>Subtotal:</span> <span>$@Session["total"]</span></p>
                                        <p><span>Delivery:</span> <span>$0.00</span></p>
                                        <p><span>Discount:</span> <span>$0.00</span></p>
                                    </div>
                                    <div class="grand-total">
                                        <p><span><strong>Total:</strong></span> <span>$@Session["total"]</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <h2 style="text-align:center">Your Shopping Is Empty</h2>
}
