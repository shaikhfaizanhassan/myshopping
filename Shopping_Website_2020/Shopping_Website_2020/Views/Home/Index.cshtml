@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    .product-entry
    {
        width:360px;
        height:470px;
        margin:10px;
        border:1px solid;
        padding:25px;
    }
    .product-img
    {
        
    }
</style>


<div class="colorlib-shop">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center colorlib-heading">
                <h2><span>Our Products</span></h2>
                <p>We love to tell our successful far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        @{
            foreach (var item in ViewBag.Pro_show)
            {
                <div class="row" style="float:left">
                    <div class="col-md-3 text-center">
                        <div class="product-entry">
                            <div class="product-img" style="background-image: url('Product_images/@item.product_image');">
                                
                              
                            </div>
                            <div class="desc">
                                <h3><a href="@Url.Action("Product_info","Carts", new  {id=item.p_id})">@item.product_name</a></h3>
                                <p class="price"><span>@item.product_price</span> <span class="sale"></span> </p>
                            </div>
                        </div>
                    </div>

                </div>
            }
        }
        
    </div>
</div>